<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AttendenceCMRU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#484848</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#616161</item>
        <item name="colorSecondaryVariant">#8e8e8e</item>
        <item name="colorOnSecondary">#373737</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AttendenceCMRU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AttendenceCMRU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AttendenceCMRU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="top">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#8e8e8e</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>